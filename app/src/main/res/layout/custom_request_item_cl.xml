<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <TextView
        android:id="@+id/request_name_cl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Advil"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/client_name_rq_cl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Jane Doe"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/request_name_cl"
        android:layout_alignLeft="@+id/request_name_cl"
        android:layout_alignStart="@+id/request_name_cl" />

    <TextView
        android:id="@+id/date_rq_cl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="01/12/2019"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/client_name_rq_cl"
        android:layout_alignLeft="@+id/client_name_rq_cl"
        android:layout_alignStart="@+id/client_name_rq_cl" />

    <Space
        android:layout_width="20px"
        android:layout_height="60px"
        android:layout_below="@+id/note_body"
        android:id="@+id/space" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="1"
        android:maxWidth="42dp"
        android:maxHeight="42dp"
        android:minWidth="42dp"
        android:minHeight="42dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:id="@+id/request_quantity_cl"
        android:layout_alignTop="@+id/request_name_cl"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical|center_horizontal" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:id="@+id/edit_request_cl"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:maxWidth="42dp"
        android:maxHeight="42dp"
        android:background="@drawable/myrect"
        android:src="@drawable/ic_message_black_24dp"
        android:layout_alignTop="@+id/date_rq_cl"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="10dp"
        android:text="Pending"
        android:textColor="@color/amber"
        android:id="@+id/status_textview_rq"
        android:layout_below="@+id/date_rq_cl"
        android:layout_alignLeft="@+id/date_rq_cl"
        android:layout_alignStart="@+id/date_rq_cl" />

</RelativeLayout>